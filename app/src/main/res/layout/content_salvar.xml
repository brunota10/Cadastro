<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_salvar"
    tools:context="com.example.brunoalves.cadastro.Salvar">

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:columnCount="2">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="CNPJ:"
            android:id="@+id/textView2"
            android:layout_marginTop="0dp"
            android:layout_column="0"
            android:layout_row="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCnpj"
            android:layout_column="1"
            android:layout_row="1"
            android:hint="Ex.: 12.345.678/9012-34"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nome Fantasia:"
            android:id="@+id/textView5"
            android:layout_column="0"
            android:layout_row="4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFantasia"
            android:layout_row="4"
            android:layout_column="1"
            android:hint="Ex.: Auto Posto ABC"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lagradouro:"
            android:id="@+id/textView6"
            android:layout_column="0"
            android:layout_row="5" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLogradouro"
            android:layout_column="1"
            android:layout_row="5"
            android:hint="Ex.: Rua das Couves"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Número:"
            android:id="@+id/textView7"
            android:layout_column="0"
            android:layout_row="6" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextNumero"
            android:layout_column="1"
            android:layout_row="6"
            android:hint="Ex.: 123"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bairro:"
            android:id="@+id/textView8"
            android:layout_column="0"
            android:layout_row="7" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextBairro"
            android:layout_column="1"
            android:layout_row="7"
            android:hint="Ex.: Centro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="CEP:"
            android:id="@+id/textView9"
            android:layout_column="0"
            android:layout_row="8" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCep"
            android:layout_column="1"
            android:layout_row="8"
            android:hint="Ex.: 38.400-000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cidade:"
            android:id="@+id/textView11"
            android:layout_column="0"
            android:layout_row="9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextCidade"
            android:layout_column="1"
            android:layout_row="9"
            android:hint="Ex.: Uberlândia"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Estado:"
            android:id="@+id/textView12"
            android:layout_column="0"
            android:layout_row="10" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_column="1"
            android:layout_row="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Telefone:"
            android:id="@+id/textView13"
            android:layout_column="0"
            android:layout_row="11" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextTelefone"
            android:layout_column="1"
            android:layout_row="11"
            android:hint="Ex.: (34)99999-9999"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_row="12"
            android:layout_columnSpan="2"
            android:background="#000000"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Usuario:"
            android:id="@+id/textView14"
            android:layout_column="0"
            android:layout_row="13" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextUsuario"
            android:layout_column="1"
            android:layout_row="13"
            android:hint="Ex.: postoabc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Senha:"
            android:id="@+id/textView15"
            android:layout_column="0"
            android:layout_row="14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextSenha"
            android:layout_column="1"
            android:layout_row="14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Repetir Senha:"
            android:id="@+id/textView16"
            android:layout_column="0"
            android:layout_row="15" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextRepeteSenha"
            android:layout_column="1"
            android:layout_row="15" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gravar"
            android:id="@+id/button2"
            android:layout_column="0"
            android:layout_row="16"
            android:layout_columnSpan="2"
            android:onClick="validForm" />
    </GridLayout>
</ScrollView>
